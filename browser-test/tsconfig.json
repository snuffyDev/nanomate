{
	"references": [{ "path": "../packages/nanomate" }],
	"compilerOptions": {
		"target": "ESNext",
		"composite": true,
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"paths": {
			"@": ["../packages/nanomate/src/"],
			"@/*": ["../packages/nanomate/src/*"]
		}
	},
	"include": ["src"]
}
